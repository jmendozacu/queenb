<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php if ($_product->isSaleable()): ?>
	<div class="add-to-cart v-centered-content">
    	<button type="button" title="<?php echo $buttonTitle ?>" id="product-addtocart-button" class="button btn-cart v-center" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>
		<?php if(!$_product->isGrouped()): ?>
        
        
        
        
        <?php if(Mage::helper('core')->isModuleEnabled('Queenb_Qtymgnt')):?>
        <?php
        if(Mage::getSingleton( 'customer/session' )->isLoggedIn()){
			$groupId = Mage::getSingleton('customer/session')->getCustomerGroupId();
		}
		else
		{
			$groupId=0;
		}
		$_blockData = $this->getLayout()->createBlock('qtymgnt/qtymgnt')->loadqtydata($groupId,$_product->getId());
		?>
        
			<div class="qty-wrapper v-center">
				<label for="qty"><?php echo $this->__('Qty:') ?></label>
                
                
                <?php if($_blockData):?>
            <select style="width:72px;height:40px;" name="qty" id="qty">
            <?php
            $exp=explode(",",$_blockData);
			for($i=0;$i<count($exp);$i++){
				if($exp[$i]){
					if($exp[$i]==max($this->getProductDefaultQty() * 1, 1))
					{
						$sel=" selected";
					}
					else
					{
						$sel="";
					}
					echo '<option value="'.$exp[$i].'"'.$sel.'>'.$exp[$i].'</option>';
				}
			}
			?>
            </select>
            
            
            <?php else:?>
                
                
				<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
               <?php endif; ?> 
                
			</div>
        <?php else:?>
        <div class="qty-wrapper v-center">
				<label for="qty"><?php echo $this->__('Qty:') ?></label>
				<input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
			</div>
        
		<?php endif; ?>
        
        
        
        
        
        <?php endif; ?>
	</div>
	<span class="small-quote">FREE Australian shipping on orders over $100*</span>
	<div class="paypal-wrapper"><?php echo $this->getChildHtml('', true, true) ?></div>
<?php endif; ?>
